@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Eau Claire Hair Salon Stylist Details</h2>
<hr />
<h3>Stylist Name: @Html.DisplayFor(model => model.StylistName)<h3>

@if (@Model.Clients.Count == 0)
{
  <h3>This stylist does not currently have any clients.</h3>
} 
else
{
  <h3> Stylist's Clients:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>

<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>

<p>@Html.ActionLink("Back to current list of Salon Stylists", "Index")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>