@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Client Details</h2>
<hr />
<h3>Client Name: @Html.DisplayFor(model => model.ClientName)<h3>

<h3>@Html.DisplayNameFor(model => model.Stylist): @Html.DisplayFor(model => model.Stylist.StylistName)<h3>

<h3>Appointment Date: @Html.DisplayFor(model => model.ApptDate)<h3></h3>

<br><br>

<p>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</p>

<p>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</p>

<p>@Html.ActionLink("Back to list of salon clients", "Index")</p>